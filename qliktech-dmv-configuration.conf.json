	"verbose": true,
	"plugins": {
		"check-directory-name-plugin": {
			"regexp": "^[a-z]+$"
		},
		"check-file-name-plugin": {
			"regexp": "^[a-z|-]+\\.(?:js|html|css|less)$"
		},
		"check-html-properties-and-values-plugin": {
			"disallowPropertiesStartingWith":
				[
					"ng-",
					"style"
				],
			"disallowValuesStartingWith": {
				"-translation$": "^DataModelViewer\\."
			}
		},
		"check-css-selectors-plugin": {
			"disallow":
				[
					"touch-off"
				]
		},
		"check-file-contents-less-plugin": {
			"disallow":
				[
					"-moz-",
					"-webkit-",
					"-o-",
					"-ms-"
				]
		},
		"check-css-comment-plugin": {
			"allowCommentedCode": false
		},
		"check-javascript-line-length-plugin": {
			"length": 600
		},
		"check-file-contents-javascript-plugin": {
			"disallow":
				[
					"TODO",
					"FIXME",
					"/\\*global.+console"
				],
			"mustcontain":
				[
					"@owner \\w+ \\w+ \\(\\w{3}\\)"
