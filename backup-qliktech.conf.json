{
	"source": {
		"root": "C:\\christoffer\\git_repos\\ft-thejungle-65353\\src\\Client\\Client\\web\\",
		"ignore":
			[
				"C:\\christoffer\\git_repos\\ft-thejungle-65353\\src\\Client\\Client\\web\\test\\",
				"C:\\christoffer\\git_repos\\ft-thejungle-65353\\src\\Client\\Client\\web\\translate\\",
				"C:\\christoffer\\git_repos\\ft-thejungle-65353\\src\\Client\\Client\\web\\js\\external\\"
			]
	},
	"verbose": false,
	"plugins": {
		"check-directory-name-plugin": {
			"pattern": "^[a-z]+$"
		},
		"check-file-name-plugin": {
			"pattern": "^[a-z|-]+\\.(?:js|html|css|less)$"
		},
		"check-file-contents-javascript-plugin": {
			"mustcontain":
				[
					"@owner .+"
				]
		},
		"check-html-properties-and-values-plugin": {
			"disallowPropertiesStartingWith":
				[
					"data-ng-",
					"x-ng-",
					"ng:",
					"style"
				]
		},

		"check-file-contents-less-plugin": {
			"disallow":
				[
					"-moz-",
					"-webkit-",
					"-o-",
					"-ms-"
				]
		},
		"check-file-contents-javascript-plugin": {
			"mustcontain":
				[
					"@owner \\w+ \\w+ \\(\\w{3}\\)"
				]
		}
	}
}